# OperaFlow Railway Environment Configuration
# Copy these variables to your Railway project environment variables

# Environment Mode
ENV_MODE=production

# Database (Supabase) - REQUIRED
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis (Railway Redis Service) - REQUIRED
# Railway automatically provides these when you add a Redis service
REDIS_HOST=${{REDIS.RAILWAY_PRIVATE_DOMAIN}}
REDIS_PORT=${{REDIS.RAILWAY_TCP_PROXY_PORT}}
REDIS_PASSWORD=${{REDIS.REDIS_PASSWORD}}
REDIS_SSL=False

# LLM Providers (at least one required)
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key
OPENROUTER_API_KEY=your-openrouter-key
MODEL_TO_USE=anthropic/claude-3-5-sonnet-20241022

# Search and Web Scraping - REQUIRED
TAVILY_API_KEY=your-tavily-key
FIRECRAWL_API_KEY=your-firecrawl-key

# Background Job Processing - REQUIRED
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-qstash-signing-key
QSTASH_NEXT_SIGNING_KEY=your-qstash-next-signing-key

# Webhook Configuration - Railway automatically provides RAILWAY_PUBLIC_DOMAIN
WEBHOOK_BASE_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}
WEBHOOK_SECRET=your-webhook-secret

# Agent Execution (Daytona) - REQUIRED
DAYTONA_API_KEY=your-daytona-key
DAYTONA_PROFILE_ID=your-daytona-profile-id

# Optional Integrations
RAPIDAPI_KEY=your-rapidapi-key
SMITHERY_API_KEY=your-smithery-key

# Slack Integration (Optional)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# MCP Service (Optional)
MCP_SERVICE_API_KEY=your-mcp-service-key

# Pipedream Integration (Optional)
PIPEDREAM_API_KEY=your-pipedream-key

# Frontend Configuration - Railway automatically provides RAILWAY_PUBLIC_DOMAIN
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_BACKEND_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/api
NEXT_PUBLIC_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}
NEXT_PUBLIC_ENV_MODE=PRODUCTION

# Railway Specific - These are automatically provided by Railway
PORT=3000
RAILWAY_ENVIRONMENT=production
RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# Security
SECRET_KEY_BASE=your-secret-key-base

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn 